<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kirill.p4">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityTwo"
            android:label="@string/activity2_title" />
        <activity
            android:name=".ActivityThree"
            android:label="@string/activity3_title" />
        <activity
            android:name=".ActivityFour"
            android:label="@string/activity4_title">
            <intent-filter>
                <action android:name="com.example.kirill.p4.ActivityFour" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityFive"
            android:label="@string/title_activity_activity_five"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivitySix"
            android:label="@string/title_activity_activity_six"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>